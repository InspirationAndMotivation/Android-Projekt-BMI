<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/extraobese"
            android:id="@+id/imageView3"
            android:layout_centerHorizontal="true"
    />

    <TextView
            android:text="Is it your grandma fed you so much?\n Okay. Don`t say anything. We are going to GYM."
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:id="@+id/textView5"
            android:layout_below="@id/imageView3"
            android:layout_marginTop="45dp"
            android:textAppearance="@style/TextAppearance.Design.Counter" android:fontFamily="serif-monospace"
            android:textSize="18sp" android:textAlignment="center" android:textColor="@android:color/background_dark"
            android:layout_alignParentBottom="true"/>

    <Button
            android:text="Go to training"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:id="@+id/button3"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="160dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:onClick="GoBack" android:textAlignment="center"
    />
</RelativeLayout>