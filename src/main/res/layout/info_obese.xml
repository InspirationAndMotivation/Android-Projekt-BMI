<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
            android:text="You still have a chance to fix it. \n (It is so small.)"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:id="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:textAppearance="@style/TextAppearance.Design.Counter" android:fontFamily="serif-monospace"
            android:textSize="18sp" android:textAlignment="center" android:textColor="@android:color/background_dark"

    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:srcCompat="@drawable/obese"

            android:layout_centerHorizontal="true"
            android:id="@+id/imageView3"
            android:layout_marginTop="15dp"
            android:layout_below="@id/textView5"
    />
    <Button
            android:text="Go to GYM"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:id="@+id/button3"
            android:layout_below="@id/imageView3"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            android:onClick="GoBack" android:textAlignment="center"/>
</RelativeLayout>